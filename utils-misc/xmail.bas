5    ? "---- XMAIL INTERFACE ----"
10    ? " 1 - POST A WELCOME TO THIS SYSTEM"
15    ? " 2 - POST SURVEY DATA ABOUT THIS SYSTEM"
20    ? " 3 - POST A MIDDLE PASSAGE FROM THIS SYSTEM"
25    ? " 4 - POST FREIGHT LEAVING THIS SYSTEM"
30    INPUT "SELECTION"; SL
35    ON SL GOSUB 80, 100, 120, 140
40    ? "CREATING XMAIL [" XN$ "]"
45    OPEN 2,8,2,"N0:" + XN$ + ",S,W"
50    ? "WRITE ENCODED DATA [" DD$ "]"
55    PRINT#2, DD$
60    ? "CLOSING FILE"
65    CLOSE 2
70    ? "DONE!"
75 END
80    XN$ = "XMAIL-WELCOME"
85    GOSUB 160
90    DD$ = "WELCOME," + IT$ + "," + RT$
95 RETURN
100    XN$ = "XMAIL-SURVEY"
105    GOSUB 160
110    DD$ = "SURVEY," + IT$ + "," + RT$
115 RETURN
120    XN$ = "XMAIL-PASSAGE"
125    GOSUB 160
130    DD$ = "PASSAGE," + IT$ + "," + RT$
135 RETURN
140    XN$ = "XMAIL-FREIGHT"
145    GOSUB 160
150    DD$ = "FREIGHT," + IT$ + "," + RT$
155 RETURN
160    RT$ = ""
165    FOR X = 1 TO 10 
170       RT$ = RT$ + CHR$(RND(1)*40+48)
175    NEXT
180 RETURN
